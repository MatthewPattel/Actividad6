<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo fijo"
        android:id="@+id/title"
        android:textSize="50sp"/>

    <FrameLayout
        android:id="@+id/isroot"
        android:layout_width="match_parent"
        android:layout_height="200dp" >

        <include layout="@layout/scene1layout"/>

    </FrameLayout>

    <Button
        android:id="@+id/ibuttonsc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToSc1"
        android:text="Ir a Escena Uno"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal=""
        android:id="@+id/ibuttonsc2"
        android:onClick="goToSc2"
        android:text="Ir a Escena Uno"/>
</LinearLayout>
